{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block title %}Efficience IT{% endblock %}

{% block content %}
    <div class="title text-center mt-4">
        <h1>Nous contacter</h1>
    </div>


    {{ form_start(form) }}
    <div class="row justify-content-center">
        <div class="col-4 col-sm-4">{{ form_row(form.lastName) }}</div>
        <div class="col-4 col-sm-4">{{ form_row(form.firstName) }}</div>
        <div class="col-8 col-sm-8">{{ form_row(form.mail) }}</div>
        <div class="col-8 col-sm-8">{{ form_row(form.message) }}</div>
        <div class="col-8">{{ form_row(form.department) }}</div>
        <div class="col-7 text-center">{{ form_row(form.submit) }}</div>
    </div>
    {{ form_end(form) }}

{% endblock %}